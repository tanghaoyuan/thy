<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.thy.rss"
      android:versionCode="1"
      android:versionName="1.0">


    <application android:icon="@drawable/rss_icon3" android:label="@string/app_name"
                 android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".WelcomeActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		 <activity android:name=".MainRssActivity"/>
		 <activity android:name=".RssAddActivity"/>
		 <activity android:name=".RssListViewActivity"/>
		 <activity android:name=".RssWebViewActivity"/>
		 <activity android:name=".RssItemListViewActivity"/>
		 <activity android:name=".RssMgrListViewActivity"/>
		 <activity android:name=".AboutActivity"/>
    </application>
    
    <!-- 访问Internet权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 对SDCARD的写入权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest>